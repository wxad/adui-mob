<DemoBody>
	<DemoHeader title="列表 Cell" desc="单个连续模块垂直排列，显示当前内容、状态和可进行的操作。" />
	<DemoBlock
	 title="基础样式"
	 noPadding
	 noShadow
	>
		<ad-cell-group noTopBorder noBottomBorder>
			<ad-cell title="标题" />
			<ad-cell title="标题" placeholder="描述文字右对齐" />
			<ad-cell
			 title="标题"
			 placeholder="描述文字左对齐"
			 rightStyle="justify-content: flex-start;"
			/>
		</ad-cell-group>
	</DemoBlock>
	<DemoBlock
	 title="双标题"
	 noPadding
	 noShadow
	>
		<ad-cell-group noTopBorder noBottomBorder>
			<ad-cell
			 title="标题"
			 desc="副标题尽量保持一行"
			/>
			<ad-cell
			 title="标题"
			 desc="副标题尽量保持一行"
			 rightDesc="10:15"
			/>
			<ad-cell
			 title="标题"
			 desc="副标题尽量保持一行"
			 rightDesc="10:15"
			 innerStyle="align-items: flex-start;"
			/>
		</ad-cell-group>
	</DemoBlock>
	<DemoBlock
	 title="图片&图标"
	 noPadding
	 noShadow
	>
		<ad-cell-group noTopBorder>
			<ad-cell title="标题" avatar="https://wxa.wxs.qq.com/images/paki/adui-for-mobile/avatar.png" />
			<ad-cell
			 title="标题"
			 avatar="https://wxa.wxs.qq.com/images/paki/adui-for-mobile/avatar.png"
			 avatarRound
			/>
		</ad-cell-group>
		<ad-cell-group noTopBorder noBottomBorder>
			<ad-cell
			 title="小程序助手"
			 leftIcon="mini-program"
			 leftIconColor="#7587DB"
			 isLink
			/>
		</ad-cell-group>
	</DemoBlock>
