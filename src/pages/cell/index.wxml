	<DemoBlock
	 title="可操作样式"
	 noPadding
	 noShadow
	>
		<ad-cell-group noTopBorder noBottomBorder>
			<ad-cell title="标题" value="禁用态" isLink disabled="{{true}}"/>
			<ad-cell
			 title="标题"
			 value="内容说明"
			 isLink
			/>
			<ad-cell
			 title="标题"
			 value="内容说明"
			 desc="标题辅助说明"
			 isLink
			/>
			<ad-cell title="标题">
				<ad-switch slot="rightElement" defaultChecked></ad-switch>
			</ad-cell>
			<ad-cell title="标题">
				<ad-stepper slot="rightElement" value="{{30}}" />
			</ad-cell>
			<ad-cell
			 title="标题"
			 avatar="https://wxa.wxs.qq.com/images/paki/adui-for-mobile/avatar.png"
			 isLink
			/>
		</ad-cell-group>
	</DemoBlock>
	<DemoBlock
	 title="分割线样式"
	 noPadding
	 noShadow
	 class="demo_spec"
	>
		<ad-cell-group
		 noTopBorder
		 noBottomBorder
		 style="display: block; margin-bottom: 8px;"
		>
			<ad-cell title="默认" isLink />
			<ad-cell title="默认" isLink />
		</ad-cell-group>
		<ad-cell-group
		 noTopBorder
		 noBottomBorder
		 style="display: block; margin-bottom: 8px;"
		>
			<ad-cell
			 rightBanner
			 title="右通栏"
			 isLink
			/>
			<ad-cell
			 rightBanner
			 title="右通栏"
			 isLink
			/>
		</ad-cell-group>
		<ad-cell-group
		 noTopBorder
		 noBottomBorder
		 style="display: block; margin-bottom: 8px;"
		>
			<ad-cell
			 banner
			 title="通栏"
			 isLink
			/>
			<ad-cell
			 banner
			 title="通栏"
			 isLink
			/>
		</ad-cell-group>
	</DemoBlock>
