<ad-sheet
 visible="{{showDrawer6}}"
 bind:onClose="close"
 data-num="{{6}}"
 title="筛选条件"
>
	<scroll-view
	 scroll-y="{{true}}"
	 enable-flex
	 class="body1 body4"
	 catch:touchmove="noop"
	>
		<view class="subtitle">一级行业</view>
		<view class="tag_list">
			<ad-tag
			 wx:for="{{industies}}"
			 intent="{{chosenIndusty === index ? 'primary' : 'normal'}}"
			 class="tag"
			 round="{{false}}"
			 customStyle="width: calc((100vw - 60px) / 3); padding: 8px 6px;"
			 bind:tap="choseTag"
			 data-tag="{{index}}"
			>{{item}}
			</ad-tag>
		</view>
	</scroll-view>
	<view class="button" style="display: flex; padding-top: 8px; justify-content: flex-end;">
		<ad-button
		 theme="light"
		 intent="normal"
		 customStyle="width: 95px; height: 48px; margin-right: 12px;"
		 bind:tap="close"
		 data-num="{{6}}"
		>清空
		</ad-button>
		<ad-button
		 customStyle="width: 95px; height: 48px;"
		 bind:tap="close"
		 data-num="{{6}}"
		>应用
		</ad-button>
	</view>
</ad-sheet>

