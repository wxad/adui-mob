<ad-sheet
 visible="{{showDrawer2}}"
 headerStyle="box-shadow: none;"
 bind:onClose="close"
 data-num="{{2}}"
 title="{{step1 === 1 ? '二级标题' : '一级标题'}}"
 isTitleCenter="{{step1 === 1}}"
>
	<ad-icon
	 icon="arrow-left"
	 size="{{24}}"
	 color="rgba(0, 0, 0, 0.22)"
	 slot="headerLeft"
	 wx:if="{{step1 === 1}}"
	 bind:tap="resetStep"
	/>
	<view class="body2 {{step1 === 1 && 'move'}}">
		<scroll-view
		 class="body1 form"
		 scroll-y="{{true}}"
		 enable-flex
		 catch:touchmove="noop"
		>
			<view class="header1" />
			<view class="button">
				<ad-button banner bind:tap="changeStep1">下一步</ad-button>
			</view>
		</scroll-view>
		<scroll-view
		 class="body1 form"
		 scroll-y="{{true}}"
		 enable-flex
		 catch:touchmove="noop"
		>
			<view class="header1" />
			<view class="button">
				<ad-button
				 banner
				 bind:tap="close"
				 data-num="{{2}}"
				>我知道了
				</ad-button>
			</view>
		</scroll-view>
	</view>
</ad-sheet>
